for name,class in grade-classes
   :host /deep/ {name} 
       for prop, val in class
         {prop} : val
             

//def generation
for theme-name,t in themes

 .{theme-name}-scaffold
    background : t.primary
    color: white

 for name,class in theme-classes
    :host /deep/ .{theme-name} /deep/ {name} 
         for prop, val in class
            if val in t
             {prop} : t[val]
            else
             if val[0] in t
              {prop} : t[val[0]] val[1]
             else
              {prop} : val
                            
        
    
 
 



